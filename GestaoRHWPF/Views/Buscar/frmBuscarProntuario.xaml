<Window x:Class="GestaoRHWPF.Views.Buscar.frmBuscarProntuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestaoRHWPF.Views.Buscar"
        mc:Ignorable="d"
        Title="Busca de Prontuários" Height="408" Width="808" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Prontuários Cadastrados: " HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Medium"/>
        <DataGrid x:Name="dtaProntuarios" AutoGenerateColumns="False" Margin="10,49,10,21" FontSize="18" FontWeight="Medium">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Matrícula Funcionário" Width="2*" Binding="{Binding Funcionario}"/>
                <DataGridTextColumn Header="Custodia" Width="2*" Binding="{Binding Caixa}"/>
                <DataGridTextColumn Header="Criado Em" Width="2*" Binding="{Binding CriadoEm}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
