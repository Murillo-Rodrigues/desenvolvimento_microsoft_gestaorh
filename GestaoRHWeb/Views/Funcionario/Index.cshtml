@*Tecnologia de View - Razor*@
@model List<Funcionario>

<!DOCTYPE html>
<html>

<head>
    <title>Gerenciamento de Funcionários</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>
    <h2>Gerenciamento de Funcionários</h2>
    <a asp-action="Index" asp-controller="Funcionario">Tabela Funcionários</a><br />
    <a asp-action="Index" asp-controller="Caixa">Tabela Caixas</a><br />
    <a asp-action="Index" asp-controller="Prontuario">Tabela Prontuários</a><br /><br />
    <a asp-action="Index" asp-controller="Solicitacao">Tabela Solicitações</a><br /><br />

    <a asp-action="Cadastrar" asp-controller="Funcionario">Cadastrar Funcionário</a><br />
    <a asp-action="Cadastrar" asp-controller="Caixa">Cadastrar Caixa</a><br />
    <a asp-action="Cadastrar" asp-controller="Prontuario">Cadastrar Prontuario</a><br /><br />
    <a asp-action="Cadastrar" asp-controller="Solicitacao">Cadastrar Solicitação</a><br /><br />

    <fieldset>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="row">#</th>
                    <th scope="col">Matrícula</th>
                    <th scope="col">Cpf</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Criado em</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Funcionario funcionarioCadastrado in Model)
                {
    <tr>
        <td>@funcionarioCadastrado.Id</td>
        <td>@funcionarioCadastrado.Matricula</td>
        <td>@funcionarioCadastrado.Cpf</td>
        <td>@funcionarioCadastrado.Nome</td>
        <td>@funcionarioCadastrado.CriadoEm</td>
        <td><a asp-action="Remover" asp-controller="Funcionario" asp-route-id="@funcionarioCadastrado.Id"> Remover</a></td>
        <td><a asp-action="Alterar" asp-controller="Funcionario" asp-route-id="@funcionarioCadastrado.Id"> Alterar</a></td>
    </tr>}
            </tbody>
        </table>
    </fieldset>

    <p><b>Quantidade de Registros: </b>@Model.Count</p>
    <p><b>Atualizado em:</b>@DateTime.Now</p>
</body>
</html>
